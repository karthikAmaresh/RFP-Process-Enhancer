# Local Testing Configuration
# Copy this to .env for local testing without Azure services

# MongoDB (optional - if you have local MongoDB)
MONGO_CONN_STR=

# Azure Blob Storage (optional)
BLOB_CONN_STRING=
BLOB_CONTAINER_NAME=rfp-documents

# Azure Form Recognizer (optional)
FORM_RECOGNIZER_ENDPOINT=
FORM_RECOGNIZER_KEY=

# Azure OpenAI (optional)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

# Azure Cognitive Search (optional)
SEARCH_ENDPOINT=
SEARCH_API_KEY=
SEARCH_INDEX_NAME=rfp-index

# Note: The system will work in limited mode without these credentials
# - Embedding and chunking will work locally
# - Test with test_local.py to verify core functionality
