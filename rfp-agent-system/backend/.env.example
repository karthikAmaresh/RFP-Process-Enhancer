# Azure Blob Storage
BLOB_CONN_STRING=your_blob_connection_string_here
BLOB_CONTAINER_NAME=rfpenhancer1

# Azure Document Intelligence (Form Recognizer)
FORM_RECOGNIZER_ENDPOINT=your_form_recognizer_endpoint_here
FORM_RECOGNIZER_KEY=your_form_recognizer_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_KEY=your_azure_openai_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_GPT4=gpt4-deployment
AZURE_OPENAI_DEPLOYMENT_GPT35=gpt35-deployment

# LLM Selection: true = Azure OpenAI, false = Local Ollama
USE_AZURE_OPENAI=true

# Model Selection: gpt4 or gpt35
AZURE_OPENAI_MODEL=gpt4

# Azure Cognitive Search
AZURE_SEARCH_ENDPOINT=your_search_endpoint_here
AZURE_SEARCH_API_KEY=your_search_api_key_here
SEARCH_INDEX_NAME=rfp-index

# MongoDB Configuration
MONGO_CONN_STR=mongodb://localhost:27017/
MONGO_DB_NAME=rfp_db
